{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["**/bin/**", "**/test/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error",
				"noEmptyInterface": "error",
				"noImplicitAnyLet": "error",
				"noConsoleLog": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"noStaticOnlyClass": "warn",
				"noUselessCatch": "error",
				"useSimplifiedLogicExpression": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useShorthandArrayType": "error",
				"useTemplate": "error"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error",
				"noUnreachable": "error",
				"useExhaustiveDependencies": "error",
				"noUnusedImports": "error"
			},
			"performance": {
				"noDelete": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	}
}
